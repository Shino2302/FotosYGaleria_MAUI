<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FotosYGaleria_MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="Tomar Foto" Clicked="TomarFoto"/>
            <Button Text="Obtener Galeria" Clicked="MostrarGaleria"/>
            <Image x:Name="imgFoto"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
